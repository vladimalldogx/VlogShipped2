<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/subs_layout_monthly"
        android:layout_width="match_parent"
        android:background="@drawable/subs_box"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="150dp"
            android:background="@drawable/subs_box_2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starter Plan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="P999.00"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="Monthly"/>

        <TextView
            android:id="@+id/tv_payment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="PaymentID: PAYID-LZAOC3Q4HS80793AE663881V"/>


        <TextView
            android:id="@+id/tv_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="Created : 2020-02-10"/>

        <TextView
            android:id="@+id/tv_expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="Expire : 2020-03-10"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</LinearLayout>