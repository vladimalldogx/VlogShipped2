<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.ViewSubscriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FF007F"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:onClick="btnBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_button_black"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscription"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_days"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Remaining Day/s"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/subs_layout_monthly"
        android:layout_width="match_parent"
        android:background="@drawable/subs_box"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="150dp"
            android:background="@drawable/subs_box_2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starter Plan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:text="P999.00"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:text="Monthly"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_button"
            android:layout_marginStart="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="20dp"
            android:text="View Subscription History"
            android:textColor="#ffffff"/>

    </RelativeLayout>



</LinearLayout>